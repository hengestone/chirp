# Contributor: Jean-Louis Fuchs <ganwell@fangorn.ch>
# Maintainer: Jean-Louis Fuchs <ganwell@fangorn.ch>
pkgname=chirp
pkgver=0.1.41569
pkgrel=0
pkgdesc="Message-passing and actor-based programming for everyone"
url="https://github.com/concretecloud/chirp"
arch="all"
license="LGPL"
depends_dev="libuv-dev libressl-dev"
makedepends="$depends_dev py-sphinx py-sphinx_rtd_theme graphviz cppcheck"
subpackages="$pkgname-dev $pkgname-doc $pkgname-dbg"
source="chirp-$pkgver.tar.gz::https://github.com/concretecloud/chirp/archive/$pkgver.tar.gz"
builddir="$srcdir/chirp-$pkgver/build"

build() {
	cd "$builddir"
	../configure \
		--doc \
		--no-strip \
		--prefix "$pkgdir" \
		|| return 1
	make || return 1
	make doc || return 1
}

check() {
	cd "$builddir"
	make check || return 1
}
package() {
	cd "$builddir"
	make install || return 1
}


md5sums="f011f64acf39eede6e32ef9ceb27cbe6  chirp-0.1.41569.tar.gz"
sha256sums="c05d61fb684d1546188da3fece09cccf8dee49c42be6481941975ff8352b1dd9  chirp-0.1.41569.tar.gz"
