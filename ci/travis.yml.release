sudo: required

language: generic

cache:
  directories:
    - ci/alpine/.cache/

before_cache:
    - ./ci/alpine/clean-cache.sh

matrix:
  include:
    - os: linux
      env: CC=gcc
      services: docker
      script: ./ci/alpine.sh
    - os: linux
      env: CC=clang
      services: docker
      script: ./ci/alpine.sh
    - os: osx
      env: CC=clang
      script: ./ci/osx.sh
